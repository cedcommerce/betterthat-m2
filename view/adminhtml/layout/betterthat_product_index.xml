<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="styles"/>
    <head>
        <css src="Betterthat_Betterthat::highlight/styles/default.css"/>
    </head>
    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">Magento_Catalog::catalog_products</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <uiComponent name="betterthat_product_listing"/>
            <block class="Betterthat\Betterthat\Block\Adminhtml\Product\Button" name="betterthat_product_list"/>
        </referenceContainer>
    </body>
</page>

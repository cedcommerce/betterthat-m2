<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="ced_betterthat_order_import" instance="Ced\Betterthat\Cron\Order\Import" method="execute">
            <config_path>betterthat_config/betterthat_cron/order_cron_schedule</config_path>
        </job>
        <job name="ced_betterthat_order_sync" instance="Ced\Betterthat\Cron\Order\Sync" method="execute">
            <config_path>betterthat_config/betterthat_cron/order_sync_cron_schedule</config_path>
        </job>
        <job name="ced_betterthat_product_inventory_sync" instance="Ced\Betterthat\Cron\Product\Inventory"
             method="execute">
            <config_path>betterthat_config/betterthat_cron/inv_sync_cron_schedule</config_path>
        </job>
        <job name="ced_betterthat_shipment_cron" instance="Ced\Betterthat\Cron\Order\Shipment" method="execute">
            <config_path>betterthat_config/betterthat_cron/order_shipment_cron_schedule</config_path>
        </job>
    </group>
</config>
